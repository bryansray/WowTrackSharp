@using LootTrack.Web.Foundation.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="/Scripts/require.js"></script>

    @Styles.Render("~/Content/css")
    <meta name="description" content="World of Warcraft - " />
</head>

<body class="@string.Format("{0} {1} {2}", ViewContext.RouteData.DataTokens["area"], ViewContext.RouteData.GetRequiredString("controller"), ViewContext.RouteData.GetRequiredString("action"))">
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Loot Tracker", "Index", "Characters", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Characters", "Index", "Characters", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("Get", "Characters")
            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    
    @Html.RenderViewSpecificRequireJs("/Scripts/App")
    @RenderSection("scripts", required: false)
</body>

</html>
